# GraphQL mutation definitions
# https://gqlgen.com/getting-started/

input NewUser {
  name: String!
}

input DeleteUser {
  id: ID!
}

input CreateProfile {
  name: String!
  birthDate: String!
  gender: Gender!
  height: Float
  weight: Float
  activityLevel: ActivityLevel
  imageURL: String
}

input UpdateProfile {
  name: String
  birthDate: String
  gender: Gender
  height: Float
  weight: Float
  activityLevel: ActivityLevel
  imageURL: String
}

type Mutation {
  deleteUser(input: DeleteUser!): Boolean!
  createProfile(input: CreateProfile!): Profile!
  updateProfile(input: UpdateProfile!): Profile!
}